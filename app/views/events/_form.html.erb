<%# フォーム入力に失敗した場合に表示する部分 %>
<%= render 'shared/error_messages' %>

<%# ここから新規投稿フォーム %>
<%= form_for [group,event] do |f| %>
  <div class="form-group mt-3">
    <%= f.label :date, '日付' %>
    <br>
    <%= f.date_field :date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :place, '場所' %>
    <%= f.text_field :place, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :starttime, '開始時刻' %>
    <%= f.time_select :starttime, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :finishtime, '終了時刻' %>
    <%= f.time_select :finishtime, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :remarks, '備考' %>
    <%= f.text_field :remarks, class: 'form-control', rows: 10 %>
  </div>

  <%= f.submit '保存', class: 'btn btn-info' %>
<% end %>