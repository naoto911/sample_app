<h1>新規登録</h1>
<%= form_for @user do |f| %>
  <div class="row form-group mt-3">
    <div class="col-lg-4"></div>
    <div class="col-lg-2"><%= f.label :name, 'name' %></div>
    <div class="col-lg-6"><%= f.text_field :name %></div>
  </div>
  <div class="row form-group mt-3">
    <div class="col-lg-4"></div>
    <div class="col-lg-2"><%= f.label :email, 'email' %></div>
    <div class="col-lg-6"><%= f.email_field :email %></div>

  </div>
  <div class="row form-group mt-3">
    <div class="col-lg-4"></div>
    <div class="col-lg-2"><%= f.label :password, 'Password' %></div>
    <div class="col-lg-6"><%= f.password_field :password %></div>
  </div>
  <div class="row form-group mt-3">
    <div class="col-lg-4"></div>
    <div class="col-lg-2"><%= f.label :password_confirmation, 'Password' %></div>
    <div class="col-lg-6"><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="row">
    <div class="col-lg-12", style="text-align:center;">
      <%= f.hidden_field :is_avtive, value: "有効" %>
      <%= f.submit "新規登録" ,class:"btn btn-info btn-lg",
        style:"padding:5px 30px;margin-bottom:30px;" %>
    </div>
  </div>
<% end %>