<!-- ユーザー情報を表示 -->
<div class="card my-3" style="max-width: 500px;">
  <%= link_to user_path(user) do %>
  <div class="row no-gutters">
  <%# 画像ファイルの有無で処理を分岐 %>
    <%# 有る場合 %>
    <% if user.image? %>
      <div class="col-lg-6" style="max-width: 150px;">
        <%#= image_tag "#{user.image}", class: "card-img", alt:"..." %>
        <img src= <%="/assets/cuba#{1}.jpeg"%> class="card-img" alt="..."> <%# 見た目が悪いので一時的に使用 %>
      </div>
    <%# 無い場合 %>
    <% else %>
      <div class="col-lg-6" style="max-width: 150px;">
        <img src= <%="/assets/cuba#{1}.jpeg"%> class="card-img" alt="...">
      </div>
    <% end %>

    <div class="col-lg-6">
      <div class="card-body">
          <h4 class="card-title"><%= user.name %></h4>
          <p class="card-text"><%= user.email %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%# current_userを判別して分岐 %>
<%# 自分自身の場合 %>
  <% if @user.id == @current_user.id %>
    <div class="row form-group mt-3">
      <div class="col-lg-11"></div>
      <div class="col-lg-1"><%= link_to '編集', edit_user_path(@user), class: 'btn btn-outline-info'%></div>
    </div>
    <div class="row form-group mt-3">
      <div class="col-lg-11"></div>
      <div class="col-lg-1"><%= link_to '削除', user_path(@user), class: 'btn btn-outline-danger', method: :delete %></div>
      <div class="col-lg-4"></div>
    </div>
<%# 他のユーザの場合 %>
  <% else %>
  <% end %>