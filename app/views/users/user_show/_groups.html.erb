  <!-- 所属するグループを情報を表示 -->
<% Join.where(user_id: user.id, level: 1).each_with_index do |join_user| %>
<% user_group = Group.find(join_user.group_id) %>

    <div class="card my-3" style="max-width: 500px;">
      <%= link_to group_path(user_group) do %>
        <div class="row no-gutters">
          <div class="col-6" style="max-width: 150px;">

            <%# 画像が有る場合 %>
            <% if user_group.image? %>
              <%= image_tag user_group.image.thumb.url, class: "card-img", alt:"..." %>
            <%# 画像が無い場合 %>
            <% else %>
              <img src= <%="/assets/group#{1}.png"%> class="card-img" alt="...">
            <% end %>

          </div>
          <div class="col-6">
            <div class="card-body">
              <h4 class="card-title"><%= user_group.name %></h4>
              <p class="card-text"><%= user_group.introduction %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>  
<% end %>