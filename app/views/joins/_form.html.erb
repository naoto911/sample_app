<%# フォーム入力に失敗した場合に表示する部分 %>
<%= render 'shared/error_messages' %>

<%# ここから新規投稿フォーム %>
<%= form_for join do |f| %>
  <div class="form-group mt-3">
    <%= f.label :content, '申請依頼内容' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :level, '気になるor参加希望' %>
    <%= f.text_area :level, class: 'form-control', rows: 10 %>
  </div>

  <%= f.submit '保存', class: 'btn btn-info' %>
<% end %>