<%# フォーム入力に失敗した場合に表示する部分 %>
<%= render 'shared/error_messages' %>

<%# ここから新規投稿フォーム %>
<%= form_for [group,join] do |f| %>
  <div class="form-group mt-3">
    <%= f.label :content, '申請依頼内容' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :level, '気になる or 参加希望' %>
    <br>
    <%= f.select :level, [["参加希望", "参加希望"]], include_blank: "気になる" , class: 'form-control' %>
  </div>

  <%= f.submit '保存', class: 'btn btn-info' %>
<% end %>