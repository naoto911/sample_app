<div class="d-flex align-items-center">
  <h3><%= @group.name %></h3>
</div>

<%#Groupの詳細を表示%>
<table class="table table-hover boards__table mt-3">
  <td><%= @group.name %></td>
  <td><%= @group.introduction %></td>
  <td><%= link_to '編集', edit_group_path(@group), class: 'btn btn-outline-info'%></td> <%#将来的に幹事のみ実行に変更%>
  <td><%= button_to '削除', group_path(@group), class: 'btn btn-outline-danger', method: :delete %></td> <%#ここも%>
</table>

<%#3個分のタブ%>
<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">紹介</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">メンバー</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="item3-tab" data-toggle="tab" href="#item3" role="tab" aria-controls="item3" aria-selected="false">日程</a>
  </li>
</ul>

<!-- タブ部分 (各tabをpartialでわけるべき?) -->
<div class="tab-content">
<%#グループ紹介ページを表示%>
  <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
    <%= render partial: 'group_show/detaile', locals: { group: @group } %>
  </div>
<%#メンバーページを表示%>
  <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab">
  <%= render partial: 'group_show/member', locals: { group: @group } %>
  </div>
<%#日程ページを表示%>
  <div class="tab-pane fade" id="item3" role="tabpanel" aria-labelledby="item3-tab">
  <%= render partial: 'group_show/schedule', locals: { group: @group } %>
  </div>
</div>