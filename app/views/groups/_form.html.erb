<%= form_for group do |f| %>
  <div class="form-group mt-3">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, '紹介' %>
    <%= f.text_area :introduction, class: 'form-control', rows: 10 %>
  </div>

  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>