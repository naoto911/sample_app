<%# %>
<h3 class="my-3">日程</h3>
<table class="table table-hover boards__table">
  <thead class="thead-light">
    <tr>
      <th>日付</th>
      <th>場所</th>
      <th>参加/全員</th>
      <% (1..5).each do |i| %>
        <th><%= "ユーザー#{i}" %></th>
      <% end %>
      <th>備考</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% (1..5).each do |i| %>
      <tr>
        <td><%= "1/#{i}" %></td>
        <td><%= "第#{i}体育館" %></td>
        <td><%= "#{i}/10" %></td>
        <% (1..5).each do |i| %>
          <th></th>
        <% end %>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>