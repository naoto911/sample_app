<div class="d-flex align-items-center">
  <h1>グループ紹介</h1>
  <div class="ml-auto boards__linkBox">
  </div>
</div>

<%#ここからGroupsを次々に表示させる%>
<table class="table table-hover boards__table">
  <thead class="table-info"> <%# thead-light %>
    <tr>
      <th>グループ名</th>
      <th>紹介文</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
          <th><%= group.name %></th>
          <th><%= group.introduction %></th>
      </tr>
    <% end %>
  </tbody>
</table>