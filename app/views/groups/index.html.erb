<div class="d-flex align-items-center">
  <h1>グループ検索</h1>
  <div class="ml-auto boards__linkBox">
  </div>
</div>

<%#ここからGroupsを次々に表示%>
<table class="table table-hover boards__table">
  <thead class="table-info"> <%# thead-light %>
    <tr>
      <th>グループ名</th>
      <th>紹介文</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
          <td><%= link_to group.name, groups_show_path %></td> <%# thead-light class: 'btn btn-outline-dark' %>
          <td><%= group.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>