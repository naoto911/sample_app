<div class="d-flex align-items-center">
  <h3>グループを探す</h3>
</div>

<%#createアクション通過時に生成される:noticeを表示%>
<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

  <%#link_to image_を使用したい場合%>
  <div class="row row-eq-height">
    <% @groups.each_with_index do |group,i| %>
    <div class="col-4 my-3">
      <div class="card">
        <%= link_to group_path(group) do %>
          <img src= <%="/assets/group#{i+1}.png"%> class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= group.name %></h5>
            <p class="card-text"><%= group.introduction %></p>
            <p class="card-text"><small class="text-muted"><%= "#{i}" %></small></p>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>